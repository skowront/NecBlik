<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:NecBlik.Digi.GUI.ViewModels">
    <DataTemplate x:Key="DigiNetworkBriefDataTemplate" DataType="{x:Type viewModels:DigiZigBeeNetworkViewModel}">
        <StackPanel>
            <TextBlock Text="Digi"></TextBlock>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <TextBlock Text="{Binding PanId}"></TextBlock>
            <Button Command="{Binding EditCommand}" Style="{StaticResource BaseButton}" HorizontalAlignment="Left" Content="Open"></Button>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DigiNetworkDataTemplate" DataType="{x:Type viewModels:DigiZigBeeNetworkViewModel}">
        <StackPanel>
            <TextBlock Text="Digi"></TextBlock>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <TextBlock Text="{Binding PanId}"></TextBlock>
            <TextBlock Text="{Binding Guid}"></TextBlock>
            <Button Command="{Binding EditCommand}" Style="{StaticResource BaseButton}" HorizontalAlignment="Left" Content="Open"></Button>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>