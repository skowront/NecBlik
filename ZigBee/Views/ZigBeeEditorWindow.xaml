<Window x:Class="ZigBee.Views.ZigBeeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZigBee.Views"
        mc:Ignorable="d"
        Title="ZigBeeEditorWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Name"></TextBlock>
            <TextBox Text="{Binding ViewModel.Name}"></TextBox>
            <TextBlock Text="Version"></TextBlock>
            <TextBox Text="{Binding ViewModel.Version}"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding OnConfirmCommand}">Confirm</Button>
                <Button Command="{Binding OnCancelCommand}">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
