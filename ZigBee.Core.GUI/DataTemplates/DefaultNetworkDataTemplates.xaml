<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:ZigBee.Core.GUI.ViewModels">
    <DataTemplate x:Key="DefaultNetworkBriefDataTemplate" DataType="{x:Type viewModels:ZigBeeNetworkViewModel}">
        <StackPanel>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <Button Command="{Binding EditCommand}" Content="Open"></Button>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DefaultNetworkDataTemplate" DataType="{x:Type viewModels:ZigBeeNetworkViewModel}">
        <StackPanel>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <TextBlock Text="{Binding Guid}"></TextBlock>
            <Button Command="{Binding EditCommand}" Content="Open"></Button>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>