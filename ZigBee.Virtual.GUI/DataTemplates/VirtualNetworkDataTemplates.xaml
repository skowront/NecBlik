<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:ZigBee.Virtual.GUI.ViewModels"
                    xmlns:lex="clr-namespace:WPFLocalizeExtension.Extensions;assembly=WPFLocalizeextension"
                    xmlns:lexp="clr-namespace:WPFLocalizeExtension.Providers;assembly=WPFLocalizeextension"
                    xmlns:resx="clr-namespace:ZigBee.Virtual.GUI.Strings">
    <DataTemplate x:Key="VirtualNetworkBriefDataTemplate" DataType="{x:Type viewModels:VirtualZigBeeNetworkViewModel}">
        <StackPanel>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <Button Command="{Binding EditCommand}" Content="{lex:Loc ZigBee.Virtual.GUI:SR:GPOpen}"></Button>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="VirtualNetworkDataTemplate" DataType="{x:Type viewModels:VirtualZigBeeNetworkViewModel}">
        <StackPanel>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <TextBlock Text="{Binding Guid}"></TextBlock>
            <Button Command="{Binding EditCommand}" Content="{lex:Loc ZigBee.Virtual.GUI:SR:GPOpen}"></Button>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>