<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:ZigBee.Virtual.GUI.ViewModels">
    <DataTemplate x:Key="VirtualNetworkBriefDataTemplate" DataType="{x:Type viewModels:VirtualZigBeeViewModel}">
        <StackPanel>
            <TextBlock Text="Virtual"></TextBlock>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <Button Command="{Binding EditCommand}" Content="Open"></Button>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="VirtualNetworkDataTemplate" DataType="{x:Type viewModels:VirtualZigBeeViewModel}">
        <StackPanel>
            <TextBlock Text="Virtual"></TextBlock>
            <TextBlock Text="{Binding Name}"></TextBlock>
            <TextBlock Text="{Binding Guid}"></TextBlock>
            <Button Command="{Binding EditCommand}" Content="Open"></Button>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>